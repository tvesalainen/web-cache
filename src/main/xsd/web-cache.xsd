<xs:schema version="1.0"
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://vesalainen.org/schema/web-cache"
        xmlns:tns="http://vesalainen.org/schema/web-cache"
        elementFormDefault="qualified">
    <xsd:element name="web-cache">
        <xsd:complexType>
            <xsd:attribute name="cache-dir" type="xsd:string"/>
            <xsd:attribute name="http-port" type="xsd:unsignedShort" default="8080">
            <xsd:attribute name="https-port" type="xsd:unsignedShort" default="8443">
            <xsd:attribute name="fresh-timeout" type="xsd:positiveInteger" default="1000">
        </xsd:complexType>
    </xsd:element>
</xs:schema>
